@model StudentManagement.Models.Group_student

@{
    ViewData["Title"] = "Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Attendance</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Group Students</a></li>
                        <li class="breadcrumb-item active">Attendance</li>
                    </ol>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h3>Mark Attendance for @Model.Accounts.Users.Full_name</h3>
                        </div>
                    </div>

                    <form asp-action="Attend">
                        <input type="hidden" asp-for="Id" />

                        <div class="row mt-3">
                            <div class="col-sm-3 font-weight-bold">Student Name:</div>
                            <div class="col-sm-9">@Model.Accounts.Users.Full_name</div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-sm-3 font-weight-bold">Group Name:</div>
                            <div class="col-sm-9">@Model.Groups.Name</div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-sm-3 font-weight-bold">Course Name:</div>
                            <div class="col-sm-9">@Model.Courses.Name</div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-sm-3 font-weight-bold">Present:</div>
                            <div class="col-sm-9">
                                <input type="radio" asp-for="Present" value="1" /> Yes
                                <input type="radio" asp-for="Present" value="0" /> No
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-sm-3 font-weight-bold">Absent:</div>
                            <div class="col-sm-9">
                                <input type="radio" asp-for="Absent" value="1" /> Yes
                                <input type="radio" asp-for="Absent" value="0" /> No
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-success mr-2">Save</button>
                                <a asp-action="Index" class="btn btn-info">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
